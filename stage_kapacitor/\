var period = 3d
batch
    |query('''SELECT count(bytes) as hb FROM "asgbackup"."autogen"."drive_info"''')
     .period(period)
     .every(1m)
    |eval(lambda: if("hb" > 2 , 'true', 'false'))
    .as('value')
    |alert()
           .message('value')
           .info(lambda: "value" == 'true')
           .crit(lambda: "value" == 'false')
           .slack()
           .log('/var/tmp/kapacitor/points.log')

