var slack_channel = '#kapacitoralerts'
var every = 1m
var period = 3d
batch
    |query('''SELECT count(bytes) as hb FROM "asgbackup"."autogen"."drive_info"''')
     .period(period)
     .every(every)
    |alert()
           .crit(lambda: "hb" > 2)
           .message('Backup Not happened for the last 3days')
           .slack()
 	   .channel(slack_channel)
           .log('/var/tmp/kapacitor/points.log')
