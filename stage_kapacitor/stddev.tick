var period = 2s
var every = 2s
var dur = 'duration'
var stddeviation = stream 

 |from ()
  .database('asgbackup')
  .retentionPolicy('autogen')
  .measurement('drive_info')
  .where(lambda: "target" == 'Mysqltest6')
|window()
  .period(period)
  .every(every)
//|stddev(dur)
//  .as ('stdvalue')
|alert()
  .message('Value: {{index .Fields "bytes"}}')
  .crit(lambda: TRUE)
  .slack()
  .log('/var/tmp/kapacitor/files.log')
